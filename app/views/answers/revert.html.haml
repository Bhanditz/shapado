-content_for :subtabs do
  .navtitle
    = t(".title")

-form_for(:answer, :url => question_answer_path(@question, @answer), :html => {:method => :put, :class => "form"}) do |f|
  =render :partial => "form", :locals => {:f => f}
  .field-group
    .buttons
      = f.submit t("scaffold.update")
      = link_to t("scaffold.cancel"), history_question_path(@question), :class => "button cancel"
